import java.util.Arrays;


public class SumTarget_1 {
	   public static int[] twoSum(int[] nums, int target) {
	        int ans[] = new int [2];
	        int l = 0;
	        int r = nums.length-1;
	        Arrays.sort(nums);
	        while(l < r){
	            int sum = nums[l] + nums[r] ;
	            if(sum == target){
	                ans[0] = l;
	                ans[1] = r;
	                break;
	            }
	            else if(sum > target)
	                r--;
	            else
	                l++;        
	        }
	        return ans;
	    }
	public static void main(String[] args) {
		int arr[] = {3,2,4};
		int target = 6;
		int[] ans = new int[2];
		ans = twoSum(arr, 6);
	}

}
