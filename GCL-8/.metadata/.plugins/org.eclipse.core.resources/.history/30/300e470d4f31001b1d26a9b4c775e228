package Contest2;

import java.util.ArrayList;
import java.util.Arrays;




public class XOR
{
	
	public static ArrayList<Integer> closestFriends(int[] arr, int n)
	{
	    ArrayList<Integer> list = new ArrayList<Integer>();
	    for (int i = 0; i < arr.length; i++) 
	    	list.add(new Integer(arr[i]));
	    
	    for(int i = n-1; i >= 0 ; i--){
	    	int j = i-1;
	        for(; j >= 0 ; j--){
	            if(arr[i] > arr[j]){
	                list.add(i, j);
	                break;
	            }
	        }
	        if(j == -1)
	            list.add(i,-1);
	    }
		return list;
	}
	
	public static void main(String[] args){
		int[] arr = {1, 3, 4, 1, 3, 8};
		System.out.println(closestFriends(arr, 6));
	}
