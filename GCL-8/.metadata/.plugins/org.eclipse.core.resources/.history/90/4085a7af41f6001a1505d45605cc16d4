package com.day1;

public class TrappingRainWater_2 {
	public static int left_max(int[] arr, int n, int i){
		int left_max = 0;
		for(int j = 0; j < i; j++){
			if(arr[j] > left_max)
				left_max = arr[j];
		}
		return left_max;
	}
	
	public static int right_max(int[] arr, int n, int i){
		int right_max = 0;
		for(int j = n-1; j > i ; j++){
			if(arr[j] > right_max  )
				right_max = arr[j];
		}
		return right_max;
	}

	public static void trappedWater(int[] arr, int n){
		int ans = 0;
		for(int i = 1; i < n-1; i++){
			ans = ans + Math.min(left_max(arr,n,i), right_max(arr,n,i)) - arr[i];
		}
	}
	public static void main(String[] args) {
		int arr[] = {3,0,2,0,4};
		trappedWater(arr, arr.length);
	}

}
